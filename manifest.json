{
  "manifest_version": 3,
  "name": "webCa - Web Habit & Carbon Tracker",
  "version": "1.3",
  "description": "Monitor your web habits, see how long you spend on each website and estimate your carbon footprint!",
  "permissions": ["storage", "tabs", "alarms", "notifications", "idle"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
